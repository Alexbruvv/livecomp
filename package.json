{
    "name": "livecomp",
    "private": true,
    "scripts": {
        "dev": "bun --filter '{@livecomp/server,@livecomp/console}' dev",
        "db:generate": "bun --filter @livecomp/server db:generate && bun schema:generate",
        "db:push": "bun --filter @livecomp/server db:push && bun schema:generate",
        "db:studio": "bun --filter @livecomp/server db:studio",
        "schema:generate": "bun --filter @livecomp/server schema:generate && bun --filter @livecomp/sdk schema:generate"
    },
    "workspaces": [
        "packages/*"
    ]
}


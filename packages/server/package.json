{
    "name": "@livecomp/server",
    "private": true,
    "version": "0.0.1",
    "type": "module",
    "main": "src/server.ts",
    "scripts": {
        "dev": "bun run --watch src/server.ts",
        "db:generate": "bun --bun drizzle-kit generate",
        "db:push": "bun --bun drizzle-kit push",
        "db:migrate": "bun --bun drizzle-kit migrate",
        "db:studio": "bun --bun drizzle-kit studio",
        "schema:generate": "bun run script/generateSchemaFile.ts"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/chalk": "^2.2.4",
        "drizzle-kit": "^0.28.0"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.1.1",
        "@elysiajs/jwt": "^1.1.1",
        "@elysiajs/swagger": "=1.0.5",
        "@trpc/server": "^11.0.0-rc.630",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "drizzle-orm": "^0.36.1",
        "drizzle-typebox": "^0.1.1",
        "drizzle-zod": "^0.5.1",
        "elysia": "^1.1.24",
        "jose": "^5.9.6",
        "postgres": "^3.4.5",
        "superjson": "^2.2.1",
        "trpc-bun-adapter": "^1.2.0",
        "zod": "^3.23.8"

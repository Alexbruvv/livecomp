{
    "name": "@livecomp/server",
    "private": true,
    "version": "0.0.1",
    "module": "src/server.ts",
    "type": "module",
    "scripts": {
        "dev": "bun run --watch src/server.ts",
        "db:generate": "zenstack generate",
        "db:push": "zenstack generate && prisma db push",
        "db:migrate:dev": "zenstack generate && prisma migrate dev",
        "db:migrate:deploy": "zenstack generate && prisma migrate deploy",
        "db:studio": "prisma studio",
        "schema:generate": "bun run script/generateSchemaFile.ts"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/chalk": "^2.2.4",
        "prisma": "^5.21.1",
        "prismabox": "^1.1.14",
        "zenstack": "2.7.5"
    },
    "peerDependencies": {
        "typescript": "^5.0.0"
    },
    "dependencies": {
        "@elysiajs/cors": "^1.1.1",
        "@elysiajs/jwt": "^1.1.1",
        "@elysiajs/swagger": "=1.0.5",
        "@prisma/client": "^5.21.1",
        "@zenstackhq/runtime": "2.7.5",
        "chalk": "^5.3.0",
        "commander": "^12.1.0",
        "elysia": "^1.1.24"
    },
    "zenstack": {
        "schema": "./schema/index.zmodel"
    },
    "prisma": {
        "schema": "./schema/prisma/schema.prisma"
    }
}
